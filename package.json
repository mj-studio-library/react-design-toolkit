{
  "name": "@mj-studio/react-design-toolkit",
  "version": "0.0.17",
  "description": "A React Design Toolkit top of the chakra ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mj-studio-library/react-design-toolkit.git"
  },
  "scripts": {
    "t": "eslint src && yarn tsc",
    "build": "yarn t && rm -rf dist && rm -rf esm && rollup --config rollup.config.mjs",
    "release": "yarn t && zx tool/publish.mjs",
    "icon": "zx tool/svg_gen.mjs"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.1",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mj-studio/js-util": "^1.0.19",
    "@mj-studio/react-util": "^0.0.20",
    "framer-motion": "^11.0.8",
    "styled-components": "^6.1.8",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.4.1",
    "@mj-studio/eslint-config-react": "^0.1.12",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@svgr/cli": "^8.1.0",
    "@types/react": "^18.2.20",
    "@types/styled-system": "^5.1.22",
    "eslint": "^8.56.0",
    "next": ">=14",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.12.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "5.3.3",
    "zx": "^7.2.3"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "peerDependencies": {
    "next": ">=14",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "author": "MJ Studio",
  "license": "MIT"
}